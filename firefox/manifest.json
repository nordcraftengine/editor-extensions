{
  "manifest_version": 3,
  "name": "Nordcraft",
  "version": "2.3.2",
  "description": "Browser extension for the nordcraft editor.",
  "background": {
    "scripts": [
      "firefox/src/background.js"
    ]
  },
  "icons": {
    "48": "icons/nordcraft-48.png",
    "96": "icons/nordcraft-96.png"
  },
  "homepage_url": "https://editor.nordcraft.com/",
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://*.toddle.site/*",
    "https://*.nordcraft.site/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.toddle.dev/*",
        "https://*.toddle.site/*",
        "https://editor.nordcraft.com/*",
        "https://*.nordcraft.site/*"
      ],
      "js": [
        "firefox/src/install_notifier.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b369ea25-4d25-4ecb-81dd-b09da203176a}",
      "strict_min_version": "109.0"
    }
  }
}