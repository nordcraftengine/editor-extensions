{
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@types/firefox-webext-browser", "chrome-types"]
  },
  "exclude": ["node_modules"],
  "include": ["chrome", "firefox", "shared"]
}
